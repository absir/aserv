<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <groupId>com.absir</groupId>
    <artifactId>parent</artifactId>
    <version>1.0-Final</version>
    <packaging>pom</packaging>
    <properties>
        <com.absir.version>1.0.0-Final</com.absir.version>
        <org.slf4j-version>1.7.21</org.slf4j-version>
        <org.hibernate-version>5.1.3.Final</org.hibernate-version>
        <jprotobuf.version>2.0.2</jprotobuf.version>
        <thrift.version>0.9.3</thrift.version>
        <swift-codec.version>0.23.1</swift-codec.version>
        <guice.version>4.1.0</guice.version>
    </properties>
    <modelVersion>4.0.0</modelVersion>
    <modules>
        <module>absir-lang</module>
        <module>absir-io</module>
        <module>absir-bean</module>
        <module>absir-core</module>
        <module>absir-context</module>
        <module>absir-aop</module>
        <module>absir-asyn</module>
        <module>absir-hibernate</module>
        <module>absir-client</module>
        <module>absir-server</module>
        <module>absir-servlet</module>
        <module>absir-data</module>
        <module>absir-code</module>
        <module>absir-developer</module>
        <module>absir-developerImpl</module>
        <module>absir-developerWeb</module>
        <module>absir-open</module>
        <module>absir-source</module>
        <module>absir-email</module>
        <module>absir-platform</module>
        <module>absir-socket</module>
        <module>absir-socklet</module>
        <module>absir-sockser</module>
        <module>aserv-server</module>
        <module>aserv-admin</module>
        <module>absir-jsp</module>
        <module>absir-jetbrick</module>
        <module>absir-spring</module>
        <module>absir-dubbo</module>
        <module>absir-master</module>
        <module>absir-slave</module>
        <module>aserv-master</module>
        <module>aserv-slave</module>
        <module>aserv-master-slave</module>
        <module>aserv-platform</module>
        <module>absir-game</module>
        <module>aserv-game</module>
        <module>absir-thrift</module>
        <module>absir-redis</module>
        <module>absir-cluster</module>
        <module>absir-consistent</module>
    </modules>
    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.8.2</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <encoding>UTF-8</encoding>
                    <source>1.7</source>
                    <target>1.7</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <configuration>
                    <!--<encoding>UTF-8</encoding>-->
                    <attach>true</attach>
                </configuration>
                <executions>
                    <execution>
                        <phase>compile</phase>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <!-- Distribution -->
    <distributionManagement>
        <snapshotRepository>
            <id>nexus-snapshots</id>
            <name>nexus distribution snapshot repository</name>
            <url>http://o.absir.com:58080/nexus/content/repositories/snapshots/</url>
        </snapshotRepository>
    </distributionManagement>
</project>